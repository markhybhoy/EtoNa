<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gryf"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Gryffindor Profiles"
        android:textColor="#FFF"
        android:textSize="30sp" />

    <android.support.v7.widget.CardView
        android:layout_width="291dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="93dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="124dp"
            android:layout_height="167dp"
            android:contentDescription="harryPotter"
            android:padding="0dp"
            app:srcCompat="@drawable/harry" />

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="Harry Potter"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc1"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text='Otherwise known as "The Boy Who Lived." He is the main character of the series.'
            android:textColor="#FFF"
            android:textSize="15sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="298dp"
        android:layout_height="123dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="193dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="129dp"
            android:layout_height="129dp"
            android:contentDescription="hermioneGranger"
            app:srcCompat="@drawable/hermione" />

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="Hermione Granger"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc2"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="One of Harry's best friends. She is known to possesse a brilliant academic mind, and proves to be a gifted student in almost every subject that she studied."
            android:textColor="#FFF"
            android:textSize="12sp" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="298dp"
        android:layout_height="121dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="129dp"
            android:layout_height="121dp"
            app:srcCompat="@drawable/ron" />

        <TextView
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="28dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Ron Weasley"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc3"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="One of Harry's best friends. He is a pure-blood wizard, with six siblings."
            android:textSize="12sp" />
    </android.support.v7.widget.CardView>

</RelativeLayout>